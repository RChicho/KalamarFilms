<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    tools:context=".View.FragmentSomos">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageViewFragmentSomos"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/splash_kalamar_series_login" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewVersionFragmentSomos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewFragmentSomos"
        android:layout_marginLeft="125dp"
        android:layout_marginTop="40dp"
        android:text="Versión: "
        android:textColor="#00B8D4"
        android:textSize="18dp"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewCompilacionFragmentSomos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewVersionFragmentSomos"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="25dp"
        android:text="Compilación: "
        android:textColor="#00B8D4"
        android:textSize="18dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewNroVersionFragmentSomos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewFragmentSomos"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/textViewVersionFragmentSomos"
        android:text="2.0.0"
        android:textColor="#707374"
        android:textSize="18dp"

        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewNroCompiFragmentSomos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNroVersionFragmentSomos"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/textViewCompilacionFragmentSomos"
        android:text="197769"
        android:textColor="#707374"
        android:textSize="18dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewDevelopersFragmentSomos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewCompilacionFragmentSomos"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="120dp"
        android:text="Developers: "
        android:textColor="#00B8D4"
        android:textSize="18dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewNombre1FragmentSomos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNroCompiFragmentSomos"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/textViewDevelopersFragmentSomos"
        android:text="Rodrigo Chichotky"
        android:textColor="#707374"
        android:textSize="18dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewNombre2FragmentSomos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNombre1FragmentSomos"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textViewDevelopersFragmentSomos"
        android:text="Christian Lopez"
        android:textColor="#707374"
        android:textSize="18dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textViewNombre3FragmentSomos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewNombre2FragmentSomos"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/textViewDevelopersFragmentSomos"
        android:text="Alvaro Zavalia"
        android:textColor="#707374"
        android:textSize="18dp"
        />

</RelativeLayout>